<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Barbershop.MyPages.Authorization"
             BackgroundImageSource="stena.jpg">

    <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
        <StackLayout Orientation="Horizontal" Margin="5">
            <Label Text="Логин: " FontSize="18"/>
            <Entry Placeholder="Введите логин" x:Name="entryLogin" FontSize="18" WidthRequest="200"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal" Margin="5">
            <Label Text="Пароль: " FontSize="18"/>
            <Entry Placeholder="Введите пароль" WidthRequest="200" x:Name="entryPassword" FontSize="18"/>
        </StackLayout>
        <Button Margin="5" FontSize="18" WidthRequest="200" Text="Вход" CornerRadius="5" BackgroundColor="Green" Clicked="Button_Clicked"/>
        <Button Margin="5" FontSize="18" WidthRequest="200" Text="Регистрация" CornerRadius="5" BackgroundColor="Green" Clicked="Button1_Clicked"/>
    </StackLayout>
</ContentPage>